<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('head.ejs') %>
        <title>
            <%= category.name_en %>
        </title>
        <link rel="stylesheet" href="../css/category_product.css" />
</head>


<body>
    <!-- Header Section -->
    <header>
        <%- include('header_home_en.ejs') %>
    </header>
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/index">Home</a></li>
            <li class="breadcrumb-item"><a href="/product">Products</a></li>
            <li class="breadcrumb-item active" aria-current="page">
                <%= category.provider %>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                <%= category.name_en %>
            </li>
        </ol>
    </nav>

    <!-- Brands Section -->
    <section class="brands">
        <div class="brand-logo">
            <img src="../images/<%= categoryImages[1] %>" alt="Product">
        </div>
    </section>

    <!-- Products Section -->
    <section class="products">
        <h2>
            <%= category.name_en %> Products
        </h2>
        <div class="product-grid">
            <% if (products && products.length> 0) { %>
                <% products.forEach(product=> { %>
                    <% const productImages=product.image.split(',').map(img=> img.trim()); %>
                        <div class="product animation">
                            <a href="/Product_Detail?id=<%= product.id %>">
                                <img class="img1 w-100" src="../images/<%= productImages[0] %>"
                                    alt="<%= product.nameEN %>">
                                <p class="name">
                                    <%= product.nameEn %>
                                </p>
                                <p class="num">
                                    <%= product.number %>
                                </p>
                                <p class="price">$ <%= product.priceEn %>
                                </p>
                            </a>
                        </div>
                        <% }); %>
                            <% } else { %>
                                <p>No products available in this category.</p>
                                <% } %>
        </div>
    </section>


    <!-- Footer Section -->
    <footer id="footer-section">
        <%- include('footer.ejs') %>
    </footer>

    <!-- Cart Section -->
    <%- include('cart.ejs') %>


</body>

</html>